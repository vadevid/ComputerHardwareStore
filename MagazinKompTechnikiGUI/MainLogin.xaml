<Window x:Class="MagazinKompTechnikiGUI.MainLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagazinKompTechnikiGUI"
        mc:Ignorable="d"
        Title="MainLogin" MinHeight="400" MinWidth="500" MaxHeight="500" MaxWidth="625">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="registerButton" Content="Регистрация" Click="registerButton_Click" Grid.ColumnSpan="2" Margin="50,27,0,28"/>
        <Button x:Name="loginButton" Grid.Column="3" Content="Войти" Click="loginButton_Click" Grid.ColumnSpan="2" Margin="0,27,50,28"/>
        <Frame Name="LoginView" Grid.Row="1" Grid.ColumnSpan="5" Grid.RowSpan="4" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
